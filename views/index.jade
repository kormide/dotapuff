extends layout

block content
    #outer-body
        #title-bar DOTA
            span#title-part2 PUFF
        #comparison-wrapper(ng-controller='sideBySideController')
            div.mini-title Side-by-side Comparison
        #playerlist-wrapper(ng-controller='playerListController')
            div.mini-title Recent Peers
            div.player-wrapper(ng-repeat='player in players')
                img.btn-choose-left(src='img/arrow-left.png')
                img.player-avatar(src='{{player.avatar}}')
                div.player-info
                    div.player-name {{player.name}}
                    div.player-id &#35{{player.id}}
                img.btn-choose-right(src='img/arrow-right.png')
